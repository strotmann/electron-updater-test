{
  "name": "electron-quick-start",
  "version": "1.0.17",
  "description": "A minimal Electron application",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "pack": "electron-builder --dir",
    "release": "npm run pack:mac && npm run publish:mac",
    "pack:mac": "CSC_LINK=build/electron_new.p12 CSC_KEY_PASSWORD=2411 electron-builder -m",
    "publish:mac": "GH_TOKEN=3b16a3905b9ad3eeaa4fe083819cd492949c936a electron-builder --x64 --mac -p always"
  },
  "build": {
    "appId": "test.update",
    "productName": "Electrone update with new certificate",
    "mac": {
      "entitlements": "build/entitlements.mac.plist",
      "entitlementsInherit": "build/entitlements.mac.plist"
    },
    "dmg": {
      "title": "${productName} ${version} installer",
      "artifactName": "UpdaterInstaller.${ext}",
      "iconSize": "120",
      "contents": [
        {
          "x": 110,
          "y": 350
        },
        {
          "x": 540,
          "y": 350,
          "type": "link",
          "path": "/Applications"
        }
      ]
    },
    "publish": [
      {
        "provider": "github",
        "owner": "strotmann",
        "repo": "electron-updater-test"
      }
    ]
  },
  "repository": "https://github.com/strotmann/electron-updater-test",
  "keywords": [
    "Electron",
    "quick",
    "start",
    "tutorial",
    "demo"
  ],
  "author": "GitHub",
  "license": "CC0-1.0",
  "devDependencies": {
    "cross-env": "^7.0.2",
    "electron": "^7.1.9",
    "electron-builder": "^22.4.1"
  },
  "dependencies": {
    "dotenv": "^8.2.0",
    "electron-notarize": "^0.3.0",
    "electron-updater": "^4.2.5"
  }
}
